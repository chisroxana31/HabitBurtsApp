<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">

    <!-- Title -->
    <TextView
        android:id="@+id/text_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Settings"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="DuplicateIds" />

    <!-- Change Name Button -->
    <Button
        android:id="@+id/changeNameButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Change Name"
        android:backgroundTint="@color/purple_500"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_settings" />

    <!-- Name Change Layout (Initially hidden) -->
    <LinearLayout
        android:id="@+id/nameChangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/changeNameButton">

        <!-- New First Name Input -->
        <EditText
            android:id="@+id/newFirstNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New First Name"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <!-- New Last Name Input -->
        <EditText
            android:id="@+id/newLastNameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Last Name"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <!-- Save Name Button -->
        <Button
            android:id="@+id/saveNameButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Name"
            android:backgroundTint="@color/teal_700"
            android:textColor="#FFFFFF" />
    </LinearLayout>



    <!-- Change Password Button -->
    <Button
        android:id="@+id/changePasswordButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Change Password"
        android:backgroundTint="#66BB6A"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/nameChangeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/passwordChangeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/changePasswordButton">

        <EditText
            android:id="@+id/newPasswordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/confirmNewPasswordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:padding="12dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/savePasswordButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Password"
            android:backgroundTint="#66BB6A"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Log Out"
        android:backgroundTint="#2196F3"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/passwordChangeLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

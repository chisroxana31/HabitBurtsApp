<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/box_background"
    android:layout_margin="8dp">

    <!-- Habit name TextView -->
    <TextView
        android:id="@+id/habit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/habit_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="@color/white" />

    <!-- Habit type TextView -->
    <TextView
        android:id="@+id/habit_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/habit_type"
        android:textSize="12sp"
        android:textStyle="bold"
        android:paddingBottom="8dp"
        android:textColor="@color/white" />

    <!-- Empty space to push the button to the bottom -->
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <!-- Button 1 -->
        <Button
            android:id="@+id/view_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_details"
            android:backgroundTint="#2196F3"
            android:layout_marginEnd="8dp" />

        <!-- Button 2 -->
        <Button
            android:id="@+id/start_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_habit_challenge"
            android:backgroundTint="#66BB6A"
            android:layout_marginStart="8dp" />

    </LinearLayout>

</LinearLayout>
